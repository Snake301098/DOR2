function get_ores_sprite(ores_index){
	switch ores_index
	{
		case 0: return prometium_spr; break;
		case 1: return endurium_spr; break;
		case 2: return terbium_spr; break;
		case 3: return prometid_spr; break;
		case 4: return duranium_spr; break;
		case 5: return promerium_spr; break;
		case 6: return seprom_spr; break;
		case 7: return palladium_spr; break;
		default: break;
	}
}